doctype html
html(lang='en')
  head
    title Huy Tran's Voting App
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    meta(name="Node.js Voting App", content="")
    link(href="/stylesheets/bootstrap.css", rel="stylesheet")
    link(href='/stylesheets/style.css', rel='stylesheet')
  body
    .navbar.navbar-inverse.navbar-fixed-top
      .container
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/') Huy's voting App
        .navbar-collapse.collapse
          ul.nav.navbar-nav
            if !user
              li
                a(href="/polls/allpolls") View Polls
            form.navbar-form.navbar-right(method='post', action='/users/login')
              if !user
                .form-group
                  input.form-control(name="username", type="text", placeholder="Username")
                .form-group
                  input.form-control(name="password", type="password", placeholder="Password")
                button.btn.btn-success(name="submit", type="submit", id="layoutsigninbtn") Sign in
          ul.nav.navbar-nav.navbar-right
            if user
              li
                a(href='/users/logout') Logout
              li
                a(href="/polls/create") Create Poll
              li
                a(href="/polls/mypolls") My Polls
              li
                a(href="/polls/allpolls") View Polls
        .content
        != messages()
  block content

  script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js')
  script(src='/javascripts/addoptions.js')
  script(src='/javascripts/bootstrap.js')
  script(src="/javascripts/display_chart.js")
  script(src="/javascripts/Chart.js")
